- Container_RadioButtons:
    Control: GroupContainer@1.3.0
    Variant: ManualLayout
    Properties:
      Fill: =RGBA(245, 245, 245, 1)
      Height: =Gallery_RadioButtons.Y + Gallery_RadioButtons.Height
      RadiusBottomLeft: =20
      RadiusBottomRight: =20
      RadiusTopLeft: =20
      RadiusTopRight: =20
      Width: =225
      X: =Container_DateSelector.X
      Y: =Container_DateSelector.Y + Container_DateSelector.Height + Container_Toggle.Y
    Children:
      - Gallery_RadioButtons:
          Control: Gallery@2.15.0
          Variant: Vertical
          Properties:
            Height: |-
              =With(
                  {
                      ItemsCount: Self.AllItemsCount,
                      TemplateHeight: Self.TemplateHeight,
                      TemplatePadding: Self.TemplatePadding
                  },
                  ItemsCount * TemplateHeight
                  + ((ItemsCount + 1) * TemplatePadding)
              )
            Items: |-
              =[
                  { Label: "Calm Blue",   Value: 1,   Color_Main: "#A3D5F5",  Color_Background: "#E8F4FA" },
                  { Label: "Soft Yellow", Value: 1,   Color_Main: "#FFE89D",  Color_Background: "#FFF7E0" },
                  { Label: "Mint Green",  Value: 1,   Color_Main: "#B3E5C3",  Color_Background: "#E3F6E0" },
                  { Label: "Lavender",    Value: 1,   Color_Main: "#D4C5F9",  Color_Background: "#F1ECFF" },
                  { Label: "Violet Gray", Value: 1,   Color_Main: "#C9C6E3",  Color_Background: "#E9E8F6" },
                  { Label: "Sky Blue",    Value: 1,   Color_Main: "#B8E2F2",  Color_Background: "#E1F1FA" }
              ]
            OnSelect: |-
              =If(
                  ThisItem in col_selectedOptions,
                  Remove(col_selectedOptions, ThisItem),
                  Collect(col_selectedOptions, ThisItem)
              )
            TemplatePadding: =10
            TemplateSize: =35
            Width: =Parent.Width
            Y: =Container_Options.Y + Container_Options.Height
          Children:
            - Container_Option:
                Control: GroupContainer@1.3.0
                Variant: ManualLayout
                Properties:
                  Fill: =If(ThisItem in col_selectedOptions, ColorValue(ThisItem.Color_Background), RGBA(255, 255, 255, 1))
                  Height: =Parent.TemplateHeight
                  RadiusBottomLeft: =20
                  RadiusBottomRight: =20
                  RadiusTopLeft: =20
                  RadiusTopRight: =20
                  Width: =Parent.TemplateWidth
                Children:
                  - Timer_Option:
                      Control: Timer@2.1.0
                      Properties:
                        Duration: =500
                        Height: =Parent.Height
                        Visible: =false
                        Width: =Parent.Width
                  - Circle_Empty:
                      Control: Circle@2.3.0
                      Properties:
                        BorderColor: =ColorValue(ThisItem.Color_Main)
                        BorderThickness: =2
                        Fill: =RGBA(0, 0, 0, 0)
                        Height: =Parent.Height - 2*Self.Y
                        Width: =Self.Height
                        X: =Self.Y
                        Y: =10
                  - Circle_Fill:
                      Control: Circle@2.3.0
                      Properties:
                        BorderColor: =ColorValue(ThisItem.Color_Main)
                        Fill: =ColorFade(ColorValue(ThisItem.Color_Main), -5%)
                        Height: =Parent.Height - 2*Self.Y
                        HoverFill: =ColorValue(ThisItem.Color_Main)
                        PressedFill: =ColorValue(ThisItem.Color_Main)
                        Visible: =ThisItem in col_selectedOptions
                        Width: =Self.Height
                        X: =Circle_Empty.X + 2*Circle_Empty.BorderThickness
                        Y: =Circle_Empty.Y + 2*Circle_Empty.BorderThickness
                  - ButtonCanvas_Option:
                      Control: Button@0.0.45
                      Properties:
                        Align: =Align.Left
                        Appearance: ='ButtonCanvas.Appearance'.Transparent
                        FontColor: =ColorValue("#333333")
                        FontWeight: =If(ThisItem in col_selectedOptions, FontWeight.Bold, FontWeight.Normal)
                        Height: =Parent.Height - 2*Self.Y
                        OnSelect: =Select(Gallery_RadioButtons)
                        PaddingLeft: =Circle_Empty.X + Circle_Empty.Width + Circle_Empty.X
                        PaddingRight: =Parent.RadiusTopRight
                        Text: =ThisItem.Label
                        Width: =Parent.Width - Self.X
      - Container_Options:
          Control: GroupContainer@1.3.0
          Variant: AutoLayout
          Properties:
            DropShadow: =DropShadow.None
            Height: =40
            LayoutAlignItems: =LayoutAlignItems.Stretch
            LayoutDirection: =LayoutDirection.Horizontal
            LayoutGap: =10
            LayoutJustifyContent: =LayoutJustifyContent.SpaceBetween
            PaddingBottom: =8
            PaddingLeft: =8
            PaddingRight: =8
            PaddingTop: =8
            RadiusBottomLeft: =0
            RadiusBottomRight: =0
            RadiusTopLeft: =0
            RadiusTopRight: =0
            Width: =Parent.Width
          Children:
            - ButtonCanvas_RadioButton_SelectAll:
                Control: Button@0.0.45
                Properties:
                  Appearance: ='ButtonCanvas.Appearance'.Transparent
                  DisplayMode: |-
                    =If(
                        CountRows(col_selectedOptions) = CountRows(col_radioOptions) &&
                        CountIf(
                            col_selectedOptions,
                            Value in col_radioOptions.Value
                        ) = CountRows(col_radioOptions),
                        DisplayMode.Disabled,
                        DisplayMode.Edit
                    )
                  FillPortions: =1
                  FontColor: =ColorValue("#333333")
                  FontSize: =12
                  LayoutMaxHeight: =0
                  LayoutMaxWidth: =0
                  LayoutMinHeight: =16
                  LayoutMinWidth: =16
                  OnSelect: |-
                    =ClearCollect(
                        col_selectedOptions,
                        col_radioOptions
                    );
                  Text: ="Select All"
            - ButtonCanvas_RadioButton_DeselectAll:
                Control: Button@0.0.45
                Properties:
                  Appearance: ='ButtonCanvas.Appearance'.Transparent
                  DisplayMode: =If(IsEmpty(col_selectedOptions), DisplayMode.Disabled, DisplayMode.Edit)
                  FillPortions: =1
                  FontColor: =ColorValue("#333333")
                  FontSize: =12
                  LayoutMaxHeight: =0
                  LayoutMaxWidth: =0
                  LayoutMinHeight: =16
                  LayoutMinWidth: =16
                  OnSelect: =Clear(col_selectedOptions);
                  Text: ="Deselect All"
